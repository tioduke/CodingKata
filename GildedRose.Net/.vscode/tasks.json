{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/GildedRose.Net.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/GildedRose.Net.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/GildedRose.Net.Tests/GildedRose.Net.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/property:CollectCoverage=true",
                "/property:CoverletOutputFormat=lcov",
                "/property:CoverletOutput=${workspaceFolder}/coverage/lcov.info",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "dotnet run --project \"${workspaceFolder}/GildedRose.Net/GildedRose.Net.csproj\"",
            "problemMatcher": []
        }
    ]
}
