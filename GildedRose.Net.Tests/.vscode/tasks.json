{
    "version": "0.1.0",
    "command": "bash",
    "isShellCommand": true,
    "args": [ "-c" ],
    "tasks": [
        {
            "taskName": "build",
            "suppressTaskName": true,
            "args": [
                "dotnet build \"${workspaceFolder}\""
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "run",
            "suppressTaskName": true,
            "args": [
                "dotnet run --project \"${workspaceFolder}/../GildedRose.Net/GildedRose.Net.csproj\""
            ]
        },
        {
            "taskName": "test",
            "suppressTaskName": true,
            "args": [ 
                "dotnet test \"${workspaceFolder}/GildedRose.Net.Tests.csproj\""
            ],
            "isTestCommand": true
        }
    ]
}